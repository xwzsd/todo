<div class="panel panel-info">
  <% if todo_task.completed? %>
     <div class="complete">
      <%= link_to "Mark as Complete", complete_todo_list_todo_task_path(@todo_list, todo_task.id), method: :patch %>
    </div>
	</div>
	<div class="todo_task">
		<p style="opacity: 0.4"><strike><%= todo_task.content %></strike></p>
	</div>
	<div class="trash">
		<%= link_to "Delete", todo_list_todo_task_path(@todo_list, todo_task.id), method: :delete, data: { confirm: "Are you sure?" } %>
	</div>

  <% else %>
    
    <div class="complete">
      <%= link_to "Mark as Complete", complete_todo_list_todo_task_path(@todo_list, todo_task.id), method: :patch %>
    </div>
    <div class="todo_task">
      <p><%= todo_task.content %></p>
    </div>
    <div class="trash">
    	<%= link_to "Delete", todo_list_todo_task_path(@todo_list, todo_task.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>